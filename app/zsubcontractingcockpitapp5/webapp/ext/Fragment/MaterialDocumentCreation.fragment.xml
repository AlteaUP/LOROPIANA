<core:FragmentDefinition
   xmlns="sap.m"
	 xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core">
   <Dialog
      id="ManualAccountingDialog"
      contentHeight="70%"
      contentWidth="90%"
      beforeOpen=".clearFields"
      resizable="false"
      type="Message"
      state="None"
      icon="sap-icon://it-host"
      title="{i18n>createMaterialDocument}">
      <content>
      <HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMargin">
        <VBox width="40%">
          <f:SimpleForm id="SimpleFormDisplay354"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="2"
            labelSpanL="2"
            labelSpanM="2"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false">
            <f:content>
              <Label text="{i18n>vstel}" />
              <Input id="shippingPointID" value="{dialog>/Vstel}" required="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequestShippingPoint" />
              <Label text="{i18n>plannedGoodsMovDate}" />
              <DatePicker id="WadakID" value="{dialog>/Wadak}" />
              <Label text="{i18n>priority}" />
              <Input id="priorityID" value="{dialog>/Lprio}" type="Number" width="20%" liveChange=".onPriorityChange" />
              <Label text="{i18n>noteInternal}" />
              <TextArea id="noteInternalNoteID" value="{dialog>/commenti_interni}" />
              <Label text="{i18n>noteDDT}" />
              <TextArea id="noteDDTID" value="{dialog>/commenti_ddt}"  />
            </f:content>
          </f:SimpleForm>
          </VBox>
          <VBox alignItems="Start" justifyContent="Center" class="sapUiSmallMarginBegin">
              <Button text="Test" />
          </VBox>
        </HBox>
      	<Table id="selectedMaterialTableId"
          items="{
            path: '/SelectedMaterial'
          }">
          <columns>
                <Column>
                    <Text text="{i18n>cprodOrd}"/>
                </Column>
                <Column>
                    <Text text="{i18n>plant}"/>
                </Column>
                <Column>
                    <Text text="{i18n>material}"/>
                </Column>
                <Column>
                    <Text text="{i18n>batch}"/>
                </Column>
                <Column>
                    <Text text="{i18n>quantityToIssue}"/>
                </Column>
                <Column>
                    <Text text="{i18n>quantityToIssue}" visible="false"/>
                </Column>
                <Column>
                    <Text text="{i18n>quantity}"/>
                </Column>
                <Column>
                    <Text text="{i18n>qtyToBeConsumed}"/>
                </Column>
                <Column id="lgort1ID">
                    <Text text="{i18n>lgort1}"/>
                </Column>
                <Column id="lgort2ID">
                    <Text text="{i18n>lgort2}"/>
                </Column>
                <Column id="supplierID">
                    <Text text="{i18n>supplier}"/>
                </Column>
            </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
              <Input 
                  value="{CprodOrd}" editable="false" />
                <Input 
                  value="{Plant}" editable="false" />
                <Input 
                  value="{Material}" editable="false" />
                <Input 
                  value="{Batch}" editable="false" />
                <Input 
                  value="{QtyToIssue}" description="{BaseUnit}" />
                <Input 
                  value="{QtyToIssueOriginal}" description="{BaseUnit}" visible="false" />
                <Input 
                  value="{TotalConfdQtyForATPInBaseUoM}" description="{BaseUnit}" editable="false" />
                <Input 
                  value="{TotalWithdrawnQuantity}" description="{BaseUnit}" />
                <Input 
                  value="{Lgort1}" editable="false" />
                <Input 
                  value="{Lgort2}" editable="false" />
                <Input 
                  value="{Supplier}" editable="true" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
      <beginButton>
        <Button 
          id="CloseManualAccountingDialog" 
          type="Emphasized"
          width="47.5%"
          icon="sap-icon://decline"
          press=".onCloseMaterialDocumentCreationDialog"
          text="{i18n>Close}"/>
        </beginButton>
        <endButton>
        <Button 
          id="ConfirmManualAccountingDialog" 
          type="Accept"
          width="47.5%"
          icon="sap-icon://accept"
          press=".onConfirmMaterialDocumentCreationDialog"
          text="{i18n>Create}"/>
      </endButton>
      </Dialog>
</core:FragmentDefinition>